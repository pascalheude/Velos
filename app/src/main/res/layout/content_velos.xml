<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VelosActivity"
    tools:showIn="@layout/activity_velos">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:horizontalSpacing="2dp"
        android:orientation="horizontal"
        android:rowCount="8"
        android:verticalSpacing="2dp">

        <TextView
            android:layout_width="@dimen/column5"
            android:layout_height="@dimen/row1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_columnWeight="5"
            android:background="@color/colorBlue" />

        <TextView
            android:id="@+id/TextViewPage"
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="X/Y"
            android:textSize="24sp" />

        <TextView
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row2"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/colorBlue" />

        <TextView
            android:id="@+id/TextViewVitesse"
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="V"
            android:textSize="50sp" />

        <TextView
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row2"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/colorBlue" />

        <ImageView
            android:id="@+id/ImageViewVitesseLimite"
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row2"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2" />

        <TextView
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row2"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:background="@color/colorBlue" />

        <TextView
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="km/h"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageViewPrecedent"
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_fleche_gauche_rouge"
            app:backgroundTint="@color/colorLightGrey" />

        <TextView
            android:id="@+id/TextViewDistance"
            android:layout_width="@dimen/column5"
            android:layout_height="@dimen/row1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_columnWeight="5"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="distance"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/ImageViewSuivant"
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_fleche_droite_rouge"
            app:backgroundTint="@color/colorLightGrey" />

        <TextView
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row3"
            android:layout_row="4"
            android:layout_rowSpan="3"
            android:layout_rowWeight="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/colorBlue" />

        <TextView
            android:id="@+id/TextViewCap"
            android:layout_width="@dimen/column5"
            android:layout_height="@dimen/row1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_columnWeight="5"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="heading"
            android:textSize="30sp" />

        <TextView
            android:layout_width="@dimen/column1"
            android:layout_height="@dimen/row3"
            android:layout_row="4"
            android:layout_rowSpan="3"
            android:layout_rowWeight="3"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:background="@color/colorBlue" />

        <TextView
            android:layout_width="@dimen/column3"
            android:layout_height="@dimen/row1"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:background="@color/colorBlue" />

        <ImageView
            android:id="@+id/ImageViewPhoto"
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row2"
            android:layout_row="5"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2" />

        <Button
            android:id="@+id/ButtonActiver"
            android:layout_width="@dimen/column2"
            android:layout_height="@dimen/row1"
            android:layout_row="6"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:text="Activer" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>